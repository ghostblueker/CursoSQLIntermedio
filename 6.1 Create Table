------------------- CREATE TABLE

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_ASIGNATURA_SC
CREATE TABLE CARREFOUR.dbo.CURSO_ASIGNATURA_SC (
  "COD_ASIGNATURA" NVARCHAR(20) NOT NULL DEFAULT NULL,
  "NOMBRE_ASIGNATURA" NVARCHAR(50) NOT NULL DEFAULT 'NULL',
  "CURSO" NVARCHAR(10) NOT NULL DEFAULT NULL,
  "GRUPO" NVARCHAR(2) NOT NULL DEFAULT NULL,
  "AÑO" INT NULL DEFAULT NULL,
  "COD_PROFESOR" NVARCHAR(20) NULL DEFAULT NULL,
  PRIMARY KEY ("COD_ASIGNATURA")
);

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_AULA_SC
CREATE TABLE CARREFOUR.dbo.CURSO_AULA_SC (
  "COD_AULA" NVARCHAR(20) NOT NULL DEFAULT NULL,
  "AULA" NVARCHAR(50) NOT NULL DEFAULT 'NULL',
  "CAPACIDAD" INT NULL DEFAULT NULL,
  "GRUPO" NVARCHAR(10) NULL DEFAULT NULL,
  "AÑO" INT NULL DEFAULT NULL,
  PRIMARY KEY ("COD_AULA")
);

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_ALUMNO_SC
CREATE TABLE CARREFOUR.dbo.CURSO_ALUMNO_SC (
  "COD_ALUMNO" NVARCHAR(15) NOT NULL DEFAULT NULL,
  "NOMBRE" NVARCHAR(50) NOT NULL DEFAULT 'NULL',
  "APELLIDO1" NVARCHAR(50) NOT NULL DEFAULT NULL,
  "APELLIDO2" NVARCHAR(50) NOT NULL DEFAULT NULL,
  "TELEFONO" INT NULL DEFAULT NULL,
  "CURSO" NVARCHAR(10) NULL DEFAULT NULL,
  "GRUPO" NVARCHAR(2) NULL DEFAULT NULL,
  "AÑO" INT NULL DEFAULT NULL,
  PRIMARY KEY ("COD_ALUMNO")
);

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_PROFESOR_SC
CREATE TABLE CARREFOUR.dbo.CURSO_PROFESOR_SC (
  "COD_PROFESOR" NVARCHAR(20) NOT NULL DEFAULT NULL,
  "NOMBRE" NVARCHAR(50) NOT NULL DEFAULT 'NULL',
  "APELLIDO1" NVARCHAR(50) NOT NULL DEFAULT NULL,
  "APELLIDO2" NVARCHAR(50) NOT NULL DEFAULT NULL,
  "DPTO" NVARCHAR(100) NULL DEFAULT NULL,
  "AÑO" INT NULL DEFAULT NULL,
  "COD_CARGO" NVARCHAR(20) NULL DEFAULT NULL,
  PRIMARY KEY ("COD_PROFESOR")
);

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_GRUPO_SC
CREATE TABLE CARREFOUR.dbo.CURSO_GRUPO_SC (
  "COD_GRUPO" NVARCHAR(15) NOT NULL DEFAULT NULL,
  "CURSO" NVARCHAR(50) NULL DEFAULT 'NULL',
  "GRUPO" NVARCHAR(2) NULL DEFAULT NULL,
  "AÑO" INT NULL DEFAULT NULL,
  PRIMARY KEY ("COD_GRUPO")
);

DROP TABLE IF EXISTS CARREFOUR.dbo.CURSO_CARGO_SC
CREATE TABLE CARREFOUR.dbo.CURSO_CARGO_SC (
  "COD_CARGO" NVARCHAR(20) NOT NULL DEFAULT NULL,
  "DESC_CARGO" NVARCHAR(50) NOT NULL DEFAULT 'NULL',
  "AÑO" INT NULL DEFAULT NULL,
  PRIMARY KEY ("COD_CARGO")
);
